<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#003399"
    android:gravity="center_horizontal"
   tools:context=".MainActivity">

    <TextView
        android:id="@+id/guideLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="50dip"
        android:text="Campus Guide Drone"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="5dip"
        />
    <TextView
        android:id="@+id/welcomeLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="40dip"
        android:text="Welcome!"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="5dip"
        android:layout_below="@+id/guideLabel"
        />

    <EditText
        android:id="@+id/edit_desired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Desired destination"
        android:textColorHint="#888888"
        android:textColor="#000000"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="5dip"
        android:layout_below="@+id/welcomeLabel"/>
    <Button
        android:id="@+id/btn_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_desired"
        android:text="    Request Guide    "
        android:background="@drawable/yellow_rounded_button"
        android:gravity="center"
        android:layout_marginTop="15dip"
        android:layout_marginBottom="5dip"
    />


</RelativeLayout>
